{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lovcode",
  "version": "../package.json",
  "identifier": "app.lovpen.code",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:51216",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Lovcode",
        "width": 800,
        "height": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 16,
          "y": 28
        }
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: asset: https:; font-src 'self' data:; connect-src 'self' https://api.github.com https://registry.npmjs.org https://claude.ai ipc: tauri:",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../third-parties/claude-code-templates/docs/components.json": "third-parties/claude-code-templates/docs/components.json",
      "../third-parties/claude-code-docs/docs": "third-parties/claude-code-docs/docs",
      "../third-parties/codex/docs": "third-parties/codex/docs"
    }
  }
}
